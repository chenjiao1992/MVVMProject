<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="onClick"
            type="android.view.View.OnClickListener"/>

        <import type="android.view.View"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_wishbottle"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <com.cj.library.widget.CommonToolbar
            app:title="主页"
            app:popupTheme="@style/OverflowMenuStyle"
            app:menu="@menu/menu_some_item"
            style="@style/WeChatToolbar"/>

        <TextView
            android:id="@+id/tvBobbleView"
            style="@style/commomTextStyle"
            android:gravity="center"
            android:onClick="@{onClick}"
            android:text="气泡页面(BobbleView)"/>

        <TextView
            android:id="@+id/tvScreenAdapter"
            style="@style/commomTextStyle"
            android:gravity="center"
            android:onClick="@{onClick}"
            android:text="屏幕适配页面"/>

        <TextView
            android:id="@+id/tvNode"
            style="@style/commomTextStyle"
            android:gravity="center"
            android:onClick="@{onClick}"
            android:text="管理流程页面"/>
    </LinearLayout>


</layout>