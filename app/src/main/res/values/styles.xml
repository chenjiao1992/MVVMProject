<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
        parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

    </style>
    <style name="commomTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="WeChatToolbar">
        <item name="android:id">@id/toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/theme_main</item>
        <item name="android:theme">@style/WeChatToolbar.Menu</item>
        <item name="titleTextAppearance">@style/WeChatToolbarTitle</item>
        <item name="subtitleTextAppearance">@style/WeChatToolbarSubTitle</item>
        <item name="navigationIcon">@drawable/theme_btn_toolbar_back</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="menu_item_text_color">@color/theme_toolbar_title</item>
        <item name="toolbar_underLineColor">@color/theme_color_c12</item>
    </style>
    <style name="WeChatToolbar.Menu"
        parent="Theme.AppCompat.Light">
        <item name="actionMenuTextColor">#333</item>
    </style>


    <style name="WeChatToolbarTitle">
        <item name="android:textColor">@color/theme_toolbar_title</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WeChatToolbarSubTitle">
        <item name="android:textColor">@color/theme_toolbar_title</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="OverflowMenuStyle"
        parent="@style/ThemeOverlay.AppCompat.Light">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:dropDownVerticalOffset">5dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
    </style>
</resources>
